{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2021",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["./src/**/*.ts", "tests"],
  "exclude": ["node_modules"]
}
